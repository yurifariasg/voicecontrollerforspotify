<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.voicecontroller.NoResultsActivity"
    android:orientation="vertical" tools:deviceIds="wear_square">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/no_results_title"
        android:id="@+id/textView"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="55"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/no_results_description"
        android:id="@+id/textView3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="top"
        android:gravity="center_horizontal"/>
</LinearLayout>
